#!/usr/bin/env ruby

class Array
  def times_are_tough
    self.inject { |product, i| product * i }
  end
end

class LargestProduct
  class << self

    def solution
      puts solve
    end

    private

    def series_string
      File.read("digits.txt")
    end

    def digits
      series_string.split('')
    end

    def series
      digits.each_index.map do |i|
        digits.slice(i, 5).map(&:to_i)
      end.reject { |a| a.length < 5 }.map(&:times_are_tough)
    end

    def solve
      series.max
    end
  end
end

LargestProduct.solution
