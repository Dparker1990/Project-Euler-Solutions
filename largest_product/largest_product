#!/usr/bin/env ruby

class LargestProduct

  class << self

    def solution
      puts solve
    end

    private

    def series_string
      File.read("digits.txt")
    end

    def digits
      @digits ||= series_string.split('').map(&:to_i)
    end

    def series
      digits.each_index.map do |i|
        digits.slice(i, 5).inject { |product, i| product * i }
      end
    end

    def solve
      series.max
    end
  end
end

LargestProduct.solution
